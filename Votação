void votar(Candidato candidatos[], int total_candidatos, Usuario *usuario) {
    int numero;
    printf("Digite o número do candidato para votar: ");
    scanf("%d", &numero);

    for (int i = 0; i < total_candidatos; i++) {
        if (candidatos[i].numero == numero) {
            candidatos[i].votos++;
            printf("Voto registrado para %s!\n", candidatos[i].nome);
            usuario->votou = 1;  // Marca que o usuário votou
            return;
        }
    }
    printf("Número de candidato inválido!\n");
}
