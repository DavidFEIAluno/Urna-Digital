void encerrar_votacao(Candidato candidatos[], int total_candidatos) {
    int max_votos = 0;
    Candidato *vencedor = NULL;

    for (int i = 0; i < total_candidatos; i++) {
        if (candidatos[i].votos > max_votos) {
            max_votos = candidatos[i].votos;
            vencedor = &candidatos[i];
        }
    }

    if (vencedor != NULL) {
        printf("Votação encerrada! O vencedor é %s com %d votos.\n", vencedor->nome, vencedor->votos);
    } else {
        printf("Nenhum voto registrado.\n");
    }
}
