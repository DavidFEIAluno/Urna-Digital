int validar_cpf(char *cpf) {
    // Verifica se o CPF está no formato correto: 000.000.000-00
    if (strlen(cpf) != 14 || cpf[3] != '.' || cpf[7] != '.' || cpf[11] != '-')
        return 0;
    return 1;
}

int validar_rg(char *rg) {
    // Verifica se o RG está no formato correto: 00.000.000-0
    if (strlen(rg) != 12 || rg[2] != '.' || rg[6] != '.' || rg[10] != '-')
        return 0;
    return 1;
}
